---
const { title, recipe, author } = Astro.props;
import Header from '../components/Header.astro';


interface Recipe {
  title: string;
  foodImage: string;
  ingredients: string[];
  steps: string[];
  scienceFact: string;
}

interface Author {
  name: string;
  photo: string;
  note: string;
}

const { title, recipe, author } = Astro.props as {
  title: string;
  recipe: Recipe;
  author: Author;
};
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || 'Recipe Page'}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header></Header>
    <div class="layout">
      <!-- Recipe Section -->
      <div class="left">
          <div class="title">
          <!-- Recipe Title centered -->
          <div class="title-line highlight recipe-title">{recipe.title}</div>
          </div>
          <div class=recipe-content>
          <img src={recipe.foodImage} alt={recipe.title} class="recipe-page-image" />
          <div class="ingredients-section">
            <h2 class="ingredients-title">Ingredients</h2>
            <ul class="ingredients-list">
              {recipe.ingredients.map(ingredient => (
                <li>
                  <span class="ingredient-icon">âœ”</span>
                  {ingredient}
                </li>
              ))}
            </ul>
          </div>
      </div>
        <h2>Steps</h2>
        <ol>
          {recipe.steps.map((step, index) => (
            <li>{step}</li>
          ))}
        </ol>
        <h3>Scientific Fact</h3>
        <p>{recipe.scienceFact}</p>
      </div>

      <!-- Author Profile Section -->
      <div class="right">
        <img src={author.photo} alt={`Photo of ${author.name}`} class="profile-image" />
        <h2>{author.name}</h2>
        <p class="profile-note">"{author.note}"</p>
      </div>
    </div>
  </body>
</html>
